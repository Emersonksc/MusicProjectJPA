<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.example.musicprojectjpa.persistence.model.main.Authority" table="authority">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <component name="authority" class="SimpleGrantedAuthority" lazy="true">
            <property name="role" access="field"/>
        </component>
    </class>
</hibernate-mapping>